  {
    "compilerOptions": {
      "jsx": "react-jsx",       // Enable JSX for React
      "target": "ES6",          // Set the ECMAScript target
      "module": "ESNext",       // Use ES modules
      "moduleResolution": "node",
      "strict": true,
      "skipLibCheck": true,
      "esModuleInterop": true
    },
    "include": ["src"],     // Make sure to include the correct paths
    "exclude": ["node_modules"]
  }
  